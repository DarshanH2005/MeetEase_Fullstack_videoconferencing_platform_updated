# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/meetease?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration (Required for Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/v1/auth/google/callback

# Clerk Authentication (Legacy - can be removed if not used)
CLERK_SECRET_KEY=your_clerk_secret_key_here

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000

# For production deployment on Render:
# NODE_ENV=production
# FRONTEND_URL=https://your-frontend-domain.vercel.app
# GOOGLE_CALLBACK_URL=https://your-backend-domain.render.com/api/v1/auth/google/callback
