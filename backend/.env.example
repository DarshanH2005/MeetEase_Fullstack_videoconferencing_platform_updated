# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/meetease?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL (for CORS and redirects) - PRODUCTION
FRONTEND_URL=https://meet-ease-fullstack-videoconferenci.vercel.app
ALLOWED_ORIGINS=https://meet-ease-fullstack-videoconferenci.vercel.app

# Google OAuth Configuration (Required for Google login) - PRODUCTION  
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://meetease-fullstack-videoconferencing.onrender.com/api/v1/auth/google/callback

# Clerk Authentication (Legacy - can be removed if not used)
CLERK_SECRET_KEY=your_clerk_secret_key_here

# For development:
# NODE_ENV=development
# FRONTEND_URL=http://localhost:3000
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# GOOGLE_CALLBACK_URL=http://localhost:8000/api/v1/auth/google/callback
